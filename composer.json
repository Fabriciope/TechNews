{
  "name": "fabriciope/technews",
  "description": "This project is a technology articles website, where articles are made by the users themselves, creating a community of enthusiasts",
  "type": "project",
  "license": "mit",
  "authors": [
    {
      "name": "Fabr√≠cio Pereira Alves",
      "email": "fabricioalves.dev@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Src\\": "src/"
    },
    "files": [
      "src/Framework/Boot/utils.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.3",
    "league/plates": "^3.5",
    "vlucas/phpdotenv": "^5.6",
    "fabriciope/router": "^1.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^7.1",
    "pestphp/pest": "^3.8"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "unitTests": "./vendor/bin/pest --colors --testsuite=Unit",
    "featureTests": "./vendor/bin/pest --colors --testsuite=Feature",
    "test": "./vendor/bin/pest --colors"
  }
}
